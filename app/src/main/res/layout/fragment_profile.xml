<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dina.dina.fragment.ProfileFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_avatar"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/logo"/>

            <TextView
                android:text="Full Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:layout_below="@id/profile_avatar"
                android:id="@+id/task_title_label"
                android:layout_marginStart="25dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Jonathan Simananda"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:layout_below="@id/task_title_label"
                android:textSize="14sp"
                android:id="@+id/task_title_input"
                android:layout_alignStart="@id/task_title_label"/>

            <TextView
                android:text="Brand Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:id="@+id/task_content_label"
                android:layout_below="@+id/task_title_input"
                android:layout_alignStart="@id/task_title_label"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Nike Jakarta"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:id="@+id/task_content_input"
                android:layout_below="@+id/task_content_label"
                android:layout_alignStart="@+id/task_content_label" />

            <TextView
                android:text="Brand Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:id="@+id/task_date_start_label"
                android:layout_below="@+id/task_content_input"
                android:layout_alignStart="@+id/task_content_input"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Apparel, Sport"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:id="@+id/task_date_start_input"
                android:layout_below="@+id/task_date_start_label"
                android:layout_alignStart="@+id/task_content_label" />

            <TextView
                android:text="Date Registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:id="@+id/task_date_end_label"
                android:layout_below="@+id/task_date_start_input"
                android:layout_alignStart="@+id/task_content_input"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="23 February 2017"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/task_date_end_input"
                android:layout_below="@+id/task_date_end_label"
                android:layout_alignStart="@+id/task_content_label" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
